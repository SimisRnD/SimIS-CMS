<template name="Content with Sub-Tabs" image="Content with Sub-Tabs.png">
  <page>
    <section>
      <column class="small-12 cell">
        <widget name="content">
          <uniqueId>${webPageName}-title</uniqueId>
        </widget>
      </column>
    </section>
    <section>
      <column>
        <widget name="contentTabs">
          <tabs>
            <tab name="Tab 1" linkId="content-tab-1" contentUniqueId="${webPageName}-tab-1-content" />
            <tab name="Tab 2" linkId="content-tab-2" contentUniqueId="${webPageName}-tab-2-content" />
            <tab name="Tab 3" linkId="content-tab-3" contentUniqueId="${webPageName}-tab-3-content" />
            <tab name="Tab 4" linkId="content-tab-4" contentUniqueId="${webPageName}-tab-4-content" />
          </tabs>
        </widget>
      </column>
    </section>
  </page>
</template>
