<template name="Shopping Catalog" image="Shopping Catalog.png">
  <page>
    <section>
      <column class="small-12 cell">
        <widget name="content">
          <uniqueId>shop-hello</uniqueId>
        </widget>
      </column>
    </section>
    <section>
      <column class="small-12 cell text-center">
        <widget name="productBrowser">
          <view>cards</view>
          <gridMargin>true</gridMargin>
          <smallCardCount>2</smallCardCount>
          <mediumCardCount>3</mediumCardCount>
          <largeCardCount>3</largeCardCount>
        </widget>
      </column>
    </section>
    <section>
      <column class="small-12 text-center margin-bottom-100 cell">
        <widget name="content" class="home-headline margin-top-50 margin-bottom-50">
          <uniqueId>home-follow-us</uniqueId>
        </widget>
        <widget id="instagram-widget" name="instagram">
          <smallCardCount>2</smallCardCount>
          <mediumCardCount>4</mediumCardCount>
          <limit>4</limit>
        </widget>
      </column>
    </section>
  </page>
</template>
